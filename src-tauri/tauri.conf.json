{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Tailor",
    "version": "0.1.0",
    "identifier": "com.tailor.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:5173"
    },
    "bundle": {
        "icon": [
            "icons/icon.png",
            "icons/icon.ico"
        ]
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "Tailor - Multi-Window AI Workspace",
                "url": "index.html",
                "width": 1200,
                "height": 800,
                "resizable": true,
                "center": true
            }
        ],
        "security": {
            "capabilities": [
                {
                    "identifier": "main-capability",
                    "windows": [
                        "*"
                    ],
                    "permissions": [
                        "dialog:allow-open",
                        "core:default"
                    ]
                }
            ]
        }
    }
}